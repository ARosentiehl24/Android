<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".view.CalculatorActivity"
    tools:showIn="@layout/activity_calculator">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/fab_margin"
        android:layout_weight="1"
        app:contentPadding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/equation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="5dp"
                    android:gravity="bottom|end"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/primary_text_default_light"
                    android:textSize="35sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/answer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5dp"
                    android:gravity="top|end"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/secondary_text_light"
                    android:textSize="20sp" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/bClearAll"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/calculator_operations_button_style"
                    android:text="@string/c"
                    android:textColor="@color/colorPrimary"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/bLeftParenthesis"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/calculator_operations_button_style"
                    android:text="@string/left_parenthesis"
                    android:textColor="@color/colorPrimary"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/bRightParenthesis"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/calculator_operations_button_style"
                    android:text="@string/right_parenthesis"
                    android:textColor="@color/colorPrimary"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/bDivision"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/calculator_operations_button_style"
                    android:text="@string/division_sign"
                    android:textColor="@color/colorPrimary"
                    android:textSize="25sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/bSeven"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/calculator_numbers_button_style"
                    android:text="@string/number_7"
                    android:textColor="@color/background_dark"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/bEight"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/calculator_numbers_button_style"
                    android:text="@string/number_8"
                    android:textColor="@color/background_dark"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/bNine"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/calculator_numbers_button_style"
                    android:text="@string/number_9"
                    android:textColor="@color/background_dark"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/bMultiplication"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/calculator_operations_button_style"
                    android:text="@string/multiplication_sign"
                    android:textColor="@color/colorPrimary"
                    android:textSize="25sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/bFour"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/calculator_numbers_button_style"
                    android:text="@string/number_4"
                    android:textColor="@color/background_dark"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/bFive"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/calculator_numbers_button_style"
                    android:text="@string/number_5"
                    android:textColor="@color/background_dark"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/bSix"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/calculator_numbers_button_style"
                    android:text="@string/number_6"
                    android:textColor="@color/background_dark"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/bSubtract"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/calculator_operations_button_style"
                    android:text="@string/substract_sing"
                    android:textColor="@color/colorPrimary"
                    android:textSize="25sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/bOne"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/calculator_numbers_button_style"
                    android:text="@string/number_1"
                    android:textColor="@color/background_dark"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/bTwo"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/calculator_numbers_button_style"
                    android:text="@string/number_2"
                    android:textColor="@color/background_dark"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/bThree"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/calculator_numbers_button_style"
                    android:text="@string/number_3"
                    android:textColor="@color/background_dark"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/bAdd"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/calculator_operations_button_style"
                    android:text="@string/add_sign"
                    android:textColor="@color/colorPrimary"
                    android:textSize="25sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/bDot"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/calculator_numbers_button_style"
                    android:text="@string/dot"
                    android:textColor="@color/background_dark"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/bZero"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/calculator_numbers_button_style"
                    android:text="@string/number_0"
                    android:textColor="@color/background_dark"
                    android:textSize="25sp" />

                <ImageButton
                    android:id="@+id/bDelete"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/calculator_numbers_button_style"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_backspace_24dp"
                    android:tint="@color/background_dark" />

                <Button
                    android:id="@+id/bEqual"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/calculator_equal_button_style"
                    android:text="@string/equal_sign"
                    android:textColor="@color/background_light"
                    android:textSize="25sp" />
            </TableRow>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
